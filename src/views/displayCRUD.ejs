<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>List User</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </head>

    <style>
        table,
        th,
        td{
            border: 1px solid black;
            border-collapse: collapse;
        }
        .button-delete{
            outline: none;
            border: none;
            background: red;
            height: 30px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }
        .button-edit{
            outline: none;
            border: none;
            background: green;
            height: 30px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }
    </style>

    <body>
        <% if (action) { %>

            <h2><%= action%></h2>
           
        <% } %>
        <div class="container mt-3">
            <h2>List User</h2>
            <table class="table">
                <thead>
                    <tr>
                    <th>Email</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Address</th>
                    <th>Action</th>
                    </tr>
                </thead>
                
                <% for (let i = 0; i !==dataTable.length; i++) {%>
                    <tr>
                        <td ><%= dataTable[i].email %></td>
                        <td class="table-secondary"><%= dataTable[i].firstName %></td>
                        <td><%= dataTable[i].lastName %></td>
                        <td class="table-secondary"><%= dataTable[i].address %></td>
                        <td>
                            <a 
                                class="btn btn-success" 
                                role="button" 
                                aria-disabled="true"
                                href="/edit-crud?id=<%= dataTable[i].id %>"
                                >Edit</a>
                            <a 
                                class="btn btn-danger" 
                                role="button" 
                                aria-disabled="true"
                                href="/delete-user?id=<%= dataTable[i].id %>"
                            >Delete</a>
                        </td>
                        
                    </tr>
                <% }%>
                

            </table>
        </div>
    </body>
</html>