<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookingcare Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

  <div class="container">
    <div class="col-10">
        <form action="/update-crud" method="POST" class="row g-3">
          <div>
            <input name="id" type="hidden" class="form-control" id="inputFirstName4" value="<%= User[0].id %>">
          </div>
          <div class="pt-5">
              <label for="inputEmail4" class="form-label">First Name: </label>
              <input name="firstName" type="text" class="form-control" id="inputFirstName4" value="<%= User[0].firstName %>">
          </div>
          <div class="col-md-6">
            <label for="inputPassword4" class="form-label">Last Name</label>
            <input name="lastName" type="text" class="form-control" id="inputLastName4" value="<%= User[0].lastName%>">
          </div>
          <div class="col-12">
            <label for="inputAddress" class="form-label">Address</label>
            <input name="address" type="text" class="form-control" id="inputAddress" value="<%= User[0].address%>">
          </div>
          <div class="col-md-6">
            <label for="inputPhone" class="form-label">Phone Number: </label>
            <input name="phone" type="tel" class="form-control" id="inputAddress2"  value="<%= User[0].phonenumber%>">
          </div>
                  
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>